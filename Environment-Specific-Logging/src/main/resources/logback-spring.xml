<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Define log file location dynamically based on profile -->
    <property name="LOG_FILE" value="logs/app-${spring.profiles.active}.log"/>

    <!-- Console Appender (for dev & test) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender (for prod) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Development & Test Profile: Console Logging -->
    <springProfile name="dev">
        <logger name="com.bigocn.Environment_Specific_Logging.controller" level="DEBUG"/>
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <springProfile name="test">
        <logger name="com.bigocn.Environment_Specific_Logging.controller" level="INFO"/>
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <!-- Production Profile: File Logging -->
    <springProfile name="prod">
        <logger name="com.bigocn.Environment_Specific_Logging.controller" level="WARN"/>
        <root level="ERROR">
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

</configuration>
